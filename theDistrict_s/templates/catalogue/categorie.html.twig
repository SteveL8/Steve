{% extends 'base.html.twig' %}

{% block title %}Cat√©gorie{% endblock %}

{% block body %}
    <div class="container-">
        <div class="row">
            <div class="col">
                <img src="img/twitter_header_photo_2.png" class="img-fluid" alt="Banniere" title="Banniere" id="banniere">
            </div>
        </div>
    </div>

    <div class="container img-fluid">
        <div class="row mt-5 mb-5">
            {% for key, categorie in categories %}
                <div class="col-lg-4 col-md-6 col-sm-12 mt-4">
                    <div class="card" style="max-width: 350px; background-color: antiquewhite; border: 5px solid #970747;">
                        <a href="{{ path('app_plats', {'id': categorie.id}) }}" style="text-decoration: none; color: inherit;">
                            <img src="{{ categorie.image }}" class="card-img-top img-fluid rounded pb-3 ms-1 me-1 cat" alt="{{ categorie.libelle }}" title="{{ categorie.libelle }}">
                            <div class="card-body d-flex flex-column align-items-center" style="position: relative;">
                                <h5 class="card-title" style="color: #970747; position: absolute; bottom: 10px;">{{ categorie.libelle }}</h5>
                            </div>
                        </a>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
