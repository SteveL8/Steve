{% extends 'base.html.twig' %}

{% block title %}Plats de la catégorie {{ nomCategorie }}{% endblock %}

{% block body %}
 <div class="container-">
        <div class="row">
            <div class="col">
            <img src="/img/facebook_cover_photo_2.png" class="img-fluid" alt="Banniere" title="Banniere" id="banniere">
            </div>
        </div>
    </div>

    <div class="container mt-4"> 
        <h1 class="text-center mb-4">Plats de la catégorie {{ nomCategorie }}</h1>
    </div>
<div class="container img-fluid">
    {% if plats is not empty %}
    <div class="row">
        {% for plat in plats %}
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <img src="{{ asset(plat.image) }}" class="card-img-top img-fluid object-fit-cover" style="max-height: 280px;" alt="{{ plat.libelle }}">
                    <div class="card-body">
                        <h5 class="card-title">{{ plat.libelle }}</h5>
                        <p class="card-text">{{ plat.description }}</p>
                        <a href="{{ path('ajouterPanier',{'id': plat.id}) }}" class="btn btn-primary">Ajouter au panier</a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>

        </div>
        </div>
    {% endif %}
{% endblock %}
