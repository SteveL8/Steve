{% extends 'base.html.twig' %}

{% block title %}Catalogue{% endblock %}

{% block body %}
<div class="parallax">
    <video src="video/plats.mp4" class="img-fluid object-fit-cover" id="vid" autoplay loop muted></video>
</div>

<div class="container img-fluid">
    <div class="row mt-5">
        {% for key, categorie in categories %}
            <div class="col-lg-4 col-md-6 col-sm-12 mt-4">
                <div class="card" style="max-width: 350px; background-color: antiquewhite; border: 5px solid #970747;">
                    <a href="{{ path('app_plats', {'id': categorie.id}) }}" style="text-decoration: none; color: inherit;">
                        <img src="{{ categorie.image }}" class="card-img-top img-fluid rounded pb-3 ms-1 me-1 cat" alt="{{ categorie.libelle }}" title="{{ categorie.libelle }}">
                        <div class="card-body d-flex flex-column align-items-center" style="position: relative;">
                            <h5 class="card-title" style="color: #970747; position: absolute; bottom: 10px;">{{ categorie.libelle }}</h5>
                        </div>
                    </a>
                </div>
            </div>
        {% endfor %}
    </div>
</div>

<hr class="my-5"> 

<div class="container mt-5">
    <div class="row">
        {% for plat in plats %}
            <div class="col-lg-4 col-md-6 col-sm-12 mb-4">
                <div class="card" style="background-color: antiquewhite; border: 5px solid #970747;">
                    <img src="{{ plat.image }}" class="card-img-top img-fluid plat-image rounded-0" alt="{{ plat.libelle }}" title="{{ plat.libelle }}">
                    <div class="card-body text-center">
                        <h5 class="card-title" style="color: #970747;">{{ plat.libelle }}</h5>
                        <a href="' {'id': plat.id}) }}"  style="background-color: #970747; border-color: #970747;"></a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
</div>

{% endblock %}
