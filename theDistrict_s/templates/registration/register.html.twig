{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
    <div class="container col-md-6 mt-5">

        <h1 class="text-center">Inscription</h1>

        {{ form_errors(registrationForm) }}

        {{ form_start(registrationForm, {'attr': {'class': 'form-horizontal'}}) }}
            <div class="mb-3">
                {{ form_row(registrationForm.nom, {'attr': {'class': 'form-control', 'placeholder': 'Nom'}}) }}
            </div>
            <div class="mb-3">
                {{ form_row(registrationForm.prenom, {'attr': {'class': 'form-control', 'placeholder': 'Prénom'}}) }}
            </div>
            <div class="mb-3">
                {{ form_row(registrationForm.telephone, {'attr': {'class': 'form-control', 'placeholder': 'Téléphone'}}) }}
            </div>
            <div class="mb-3">
                {{ form_row(registrationForm.adresse, {'attr': {'class': 'form-control', 'placeholder': 'Adresse'}}) }}
            </div>
            <div class="mb-3">
                {{ form_row(registrationForm.cp, {'attr': {'class': 'form-control', 'placeholder': 'Code postal'}}) }}
            </div>
            <div class="mb-3">
                {{ form_row(registrationForm.ville, {'attr': {'class': 'form-control', 'placeholder': 'Ville'}}) }}
            </div>
            <div class="mb-3">
                {{ form_row(registrationForm.email, {'attr': {'class': 'form-control', 'placeholder': 'Adresse email'}}) }}
            </div>
            <div class="mb-3">
                {{ form_row(registrationForm.plainPassword, {'label': 'Mot de passe', 'attr': {'class': 'form-control', 'placeholder': 'Mot de passe'}}) }}
            </div>
            <div class="form-check mb-3">
                {{ form_row(registrationForm.agreeTerms, {'label_attr': {'class': 'form-check-label'}, 'attr': {'class': 'form-check-input'}}) }}
            </div>

            <button type="submit" class="btn btn-primary mb-4">S'inscrire</button>
        {{ form_end(registrationForm) }}
    </div>
{% endblock %}
